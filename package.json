{
  "name": "fact-public-frontend",
  "description": "Public Frontend for the Find a Court or Tribunal service",
  "version": "0.0.1",
  "engines": {
    "node": ">=22.21.1"
  },
  "scripts": {
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "stylelint **/*.scss -v -q && eslint . --ext .js,.ts && prettier --check .",
    "lint:fix": "prettier --write . .github && eslint --fix .",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "npx if-env CI=true && exit 0 || yarn test:unit",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:routes": "jest -c jest.routes.config.js",
    "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.smoke.config.js",
    "test:a11y": "node ./scripts/cleanup-playwright.mjs && playwright test --grep @a11y",
    "test:functional": "node ./scripts/cleanup-playwright.mjs && playwright test src/test/functional/tests",
    "test:functional:chrome": "node ./scripts/cleanup-playwright.mjs && playwright test --project=chrome --grep-invert='(@a11y)|(@performance)|(@visual)'",
    "test:functional:firefox": "node ./scripts/cleanup-playwright.mjs && playwright test --project=firefox --grep-invert='(@a11y)|(@performance)|(@visual)'",
    "test:functional:webkit": "node ./scripts/cleanup-playwright.mjs && playwright test --project=webkit --grep-invert='(@a11y)|(@performance)|(@visual)'",
    "test:functional:a11y": "node ./scripts/cleanup-playwright.mjs && playwright test --grep @a11y --project=chrome",
    "test:functional:smoke": "node ./scripts/cleanup-playwright.mjs && playwright test --grep @smoke",
    "test:functional:headed": "node ./scripts/cleanup-playwright.mjs && playwright test --headed",
    "test:functional:ui": "node ./scripts/cleanup-playwright.mjs && playwright test --ui",
    "test:functional:debug": "node ./scripts/cleanup-playwright.mjs && playwright test --debug",
    "playwright:install": "playwright install --with-deps",
    "playwright:report": "playwright show-report",
    "cichecks": "yarn install && yarn build && yarn lint && yarn test && yarn test:routes && yarn test:functional",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hmcts/info-provider": "^1.2.0",
    "@hmcts/nodejs-healthcheck": "1.8.6",
    "@hmcts/nodejs-logging": "4.0.4",
    "@hmcts/properties-volume": "0.0.14",
    "@types/config": "3.3.5",
    "@types/cookie-parser": "1.4.10",
    "@types/glob": "8.1.0",
    "@types/lodash": "4.17.23",
    "@types/nunjucks": "3.2.6",
    "applicationinsights": "3.12.1",
    "awilix": "12.0.5",
    "awilix-express": "9.0.2",
    "axios": "1.13.2",
    "config": "3.3.12",
    "cookie-parser": "1.4.7",
    "express": "5.2.1",
    "express-rate-limit": "^7.5.1",
    "glob": "10.5.0",
    "govuk-frontend": "5.13.0",
    "helmet": "8.1.0",
    "lodash": "4.17.21",
    "nunjucks": "3.2.4",
    "stylelint": "^16.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@hmcts/playwright-common": "^1.0.39",
    "@playwright/test": "^1.56.1",
    "@types/chai": "^5.2.1",
    "@types/express": "4.17.25",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "chai": "4.5.0",
    "chokidar": "^4.0.3",
    "copy-webpack-plugin": "9.1.0",
    "css-loader": "6.11.0",
    "dotenv": "^17.0.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-playwright": "^2.5.0",
    "get-port": "^7.1.0",
    "html-webpack-plugin": "5.6.5",
    "husky": "8.0.3",
    "jest": "^29.4.0",
    "jest-html-reporter": "3.10.2",
    "lighthouse": "^12.2.1",
    "lint-staged": "13.3.0",
    "mini-css-extract-plugin": "2.7.6",
    "nodemon": "2.0.22",
    "odhin-reports-playwright": "^1.1.8",
    "playwright": "^1.56.1",
    "playwright-core": "^1.56.1",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "2.8.8",
    "sass": "1.77.8",
    "sass-loader": "13.3.3",
    "sinon": "21.0.1",
    "style-loader": "3.3.4",
    "supertest": "^7.1.0",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "uuid": "^11.1.0",
    "webpack": "5.94.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "6.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,ts}": "eslint --fix"
  },
  "resolutions": {
    "qs": "6.14.1",
    "brace-expansion": "2.0.2"
  },
  "packageManager": "yarn@4.12.0"
}
