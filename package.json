{
  "name": "fact-public-frontend",
  "description": "Public Frontend for the Find a Court or Tribunal service",
  "version": "0.0.1",
  "engines": {
    "node": ">=22.21.1"
  },
  "scripts": {
    "start": "NODE_ENV=production ts-node --transpile-only -r tsconfig-paths/register src/main/server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "stylelint **/*.scss -v -q && eslint . --ext .js,.ts && prettier --check .",
    "lint:fix": "prettier --write . .github && eslint --fix .",
    "build": "yarn webpack --config webpack.config.js",
    "build:prod": "NODE_ENV=production yarn webpack --mode production --config webpack.config.js",
    "test": "npx if-env CI=true && exit 0 || yarn test:unit",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:routes": "jest -c jest.routes.config.js",
    "test:a11y": "jest --detectOpenHandles -c jest.a11y.config.js --maxWorkers 15",
    "test:smoke": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest -c jest.smoke.config.js",
    "test:functional": "NODE_TLS_REJECT_UNAUTHORIZED=0 yarn playwright install && codeceptjs run --steps",
    "cichecks": "yarn install && yarn build && yarn rebuild puppeteer && yarn lint && yarn test && yarn test:routes && yarn test:a11y",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hmcts/cookie-manager": "^1.1.0",
    "@hmcts/info-provider": "^1.3.0",
    "@hmcts/nodejs-healthcheck": "1.8.6",
    "@hmcts/nodejs-logging": "4.0.4",
    "@hmcts/properties-volume": "1.3.0",
    "@types/config": "3.3.5",
    "@types/cookie-parser": "1.4.10",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/lodash": "4.17.23",
    "@types/nunjucks": "3.2.6",
    "@types/require-directory": "^2.1.7",
    "applicationinsights": "3.13.0",
    "awilix": "12.0.5",
    "awilix-express": "9.0.2",
    "axios": "1.13.2",
    "config": "4.2.0",
    "cookie-parser": "1.4.7",
    "express": "5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "glob": "13.0.0",
    "govuk-frontend": "^5.14.0",
    "helmet": "8.1.0",
    "i18next": "^25.7.4",
    "i18next-http-middleware": "^3.9.2",
    "lodash": "4.17.21",
    "nunjucks": "3.2.4",
    "stylelint": "^17.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@codeceptjs/allure-legacy": "^1.0.2",
    "@codeceptjs/configure": "^1.0.6",
    "@eslint/compat": "^2.0.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/chai": "^5.2.3",
    "@types/express": "5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.7",
    "@types/pa11y": "^5.3.7",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "babel-loader": "^10.0.0",
    "chai": "4.5.0",
    "chokidar": "^3.6.0",
    "codeceptjs": "^3.7.6",
    "copy-webpack-plugin": "13.0.1",
    "css-loader": "7.1.2",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "^29.12.1",
    "globals": "^17.0.0",
    "html-webpack-plugin": "5.6.6",
    "husky": "9.1.7",
    "jest": "^30.2.0",
    "jest-html-reporter": "4.3.0",
    "lint-staged": "16.2.7",
    "mini-css-extract-plugin": "2.10.0",
    "nodemon": "3.1.11",
    "pa11y": "^9.0.1",
    "playwright": "1.57.0",
    "prettier": "3.8.0",
    "sass": "1.97.2",
    "sass-loader": "16.0.6",
    "sinon": "21.0.1",
    "style-loader": "4.0.0",
    "supertest": "^7.2.2",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "webpack": "5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "7.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.{js,ts}": "eslint --fix"
  },
  "resolutions": {
    "qs": "6.14.1",
    "brace-expansion": "2.0.2",
    "diff": "8.0.3",
    "undici": "7.18.2",
    "tar": "7.5.4",
    "@jsonjoy.com/util": "1.9.0"
  },
  "packageManager": "yarn@4.12.0"
}
